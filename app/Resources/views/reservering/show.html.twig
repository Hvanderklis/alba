{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reservering</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservering.id }}</td>
            </tr>
            <tr>
                <th>Aankomst</th>
                <td>{% if reservering.aankomst %}{{ reservering.aankomst|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Vertek</th>
                <td>{% if reservering.vertek %}{{ reservering.vertek|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Opmerking</th>
                <td>{{ reservering.opmerking }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('reservering_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('reservering_edit', { 'id': reservering.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
