{% extends '@Alba/adminpanel.html.twig' %}

{% block body %}
    <h1>Bank</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ bank.id }}</td>
            </tr>
            <tr>
                <th>Bank</th>
                <td>{{ bank.bank }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('bankIndex') }}" class="button">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('bank_edit', { 'id': bank.id }) }}" class="button">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input class="button alert" type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
