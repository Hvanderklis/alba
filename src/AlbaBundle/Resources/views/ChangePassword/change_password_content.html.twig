        <div class="main">
            <div class="col-md-10 col-md-offset-2">
                <div class="row">
                    <div class="col-md-6 col-md-offset-3">
                        <h2 class="sub-header">Change Password</h2>

                        {{ form_start(form, { 'action': path('fos_user_change_password'), 'attr': { 'class': 'fos_user_change_password' } }) }}
                            <div class="change-password">
                            {{ form_label(form.current_password, 'Current Password') }}
                            {{ form_widget(form.current_password, { 'attr': {'class': 'form-control'} }) }}

                            {{ form_label(form.plainPassword.first, 'New Password') }}
                            {{ form_widget(form.plainPassword.first, { 'attr': {'class': 'form-control'} }) }}

                            {{ form_label(form.plainPassword.second, 'Cornfirm Password') }}
                            {{ form_widget(form.plainPassword.second, { 'attr': {'class': 'form-control'} }) }}
                            </div>

                            <input type="submit" class="btn btn-primary pull-right" value="Change Password" />

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


