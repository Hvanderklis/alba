{% extends '@Alba/adminpanel.html.twig' %}

{% block body %}
    <h1>Creditcard list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Creditcardgegevens</th>
                <th>Vervaldatum</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for kaart in kaarts %}
            <tr>
                <td><a href="{{ path('card_show', { 'id': kaart.id }) }}">{{ kaart.id }}</a></td>
                <td>{{ kaart.creditcardGegevens }}</td>
                <td>{% if kaart.vervaldatum %}{{ kaart.vervaldatum|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('card_show', { 'id': kaart.id }) }}" class="button">show</a>
                        </li>
                        <li>
                            <a href="{{ path('card_edit', { 'id': kaart.id }) }}" class="button">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('card_new') }}" class="button">Create a new kaart</a>
        </li>
    </ul>
{% endblock %}
