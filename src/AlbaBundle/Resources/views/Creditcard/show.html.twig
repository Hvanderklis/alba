{% extends '@Alba/adminpanel.html.twig' %}

{% block body %}
    <h1>Kaart</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ kaart.id }}</td>
            </tr>
            <tr>
                <th>Creditcardgegevens</th>
                <td>{{ kaart.creditcardGegevens }}</td>
            </tr>
            <tr>
                <th>Vervaldatum</th>
                <td>{% if kaart.vervaldatum %}{{ kaart.vervaldatum|date('Y-m-d') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('card_index') }}" class="button">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('card_edit', { 'id': kaart.id }) }}" class="button">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete" class="button alert">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
