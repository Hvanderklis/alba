{% extends 'AlbaBundle::adminpanel.html.twig' %}
{% block body %}
    <div class="panel">
        <h1>Customers</h1>
        <a href="" class="button"><i class="fa fa-plus"></i></a>
        <table class="table">
            <thead>
            <tr>
                <th>Customer number</th>
                <th>Voornaam</th>
                <th>tussenvoegsel</th>
                <th>Achternaam</th>
                <th>Geboortedatum</th>
                <th>Geslacht</th>
                <th>Plaats</th>
                <th>Taal</th>
                <th>Email</th>
                <th>Telefoon</th>
                <th>More</th>
            </tr>
            </thead>
            <tbody>
            {% for customer in customers %}
                <tr>
                    <td>{{ customer.id }}</td>
                    <td>{{ customer.Voornaam }}</td>
                    <td>{{ customer.Tussenvoegsel }}</td>
                    <td>{{ customer.Achternaam }}</td>
                    <td>{{ customer.Geboortedatum |date("m/d/Y")}}</td>
                    <td>{{ customer.Geslacht }}</td>
                    <td>{{ customer.Plaats }}</td>
                    <td>{{ customer.Taal }}</td>
                    <td>{{ customer.Email }}</td>
                    <td>{{ customer.Telefoon }}</td>
                    <td><a href="{{ path('klantenShow', { 'id': customer.id }) }}" class="button"><i class="fa fa-eye"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
