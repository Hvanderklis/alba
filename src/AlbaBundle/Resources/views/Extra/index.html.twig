{% extends '@Alba/adminpanel.html.twig' %}

{% block body %}
    <h1 style="float: left">Extras list</h1>
    <a style="float: right" class="button" href="{{ path('extra_new') }}"><p style="margin-bottom: 0px;">New Item <i class="fa fa-plus"></i></p></a>

    <table>
        <thead>
            <tr>
                <th>Type</th>
                <th>Prijs</th>
                <th>Omschrijving</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
        {% for extra in extras %}
            <tr>
                <td>{{ extra.type }}</td>
                <td>{{ extra.prijs }}</td>
                <td>{{ extra.omschrijving }}</td>
                <td><a class="button" href="{{ path('extra_show', { 'id': extra.id }) }}"><i class="fa fa-eye"></i></a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
