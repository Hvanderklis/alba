{% extends '@Alba/adminpanel.html.twig' %}
{% block body %}
    <div class="panel">
        <h1 style="float: left">Reservation</h1>
        <a style="float: right" class="button" href="{{ path('reservering_new') }}"><p style="margin-bottom: 0px;">New Item <i class="fa fa-plus"></i></p></a>

        <table class="table">
            <thead>
            <tr>
                <th>Reservation number</th>
                <th>Arrival</th>
                <th>Departure</th>
                <th>Note</th>
                <th>More</th>
            </tr>
            </thead>
            <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.aankomst |date("m/d/Y") }}</td>
                    <td>{{ reservation.vertek |date("m/d/Y")}}</td>
                    <td>{{ reservation.opmerking }}</td>
                    <td><a href="{{ path('reservering_show', { 'id': reservation.id }) }}" class="button"><i class="fa fa-eye"></i></a></td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}