{% extends 'AlbaBundle::Dashboard.html.twig' %}
{% block body %}
    <h1 class="pull-left">Reservation</h1>
    <a href="" class="pull-right btn btn-info"><i class="fa fa-plus"></i></a>
    <div class="clearfix"></div>
    <table class="table">
        <thead>
        <tr>
            <th>Reservation number</th>
            <th>Arrival</th>
            <th>Departure</th>
            <th>Note</th>
            <th>More</th>
        </tr>
        </thead>
        <tbody>
            {% for reservation in reservations %}
                <tr>
                    <td>{{ reservation.id }}</td>
                    <td>{{ reservation.aankomst |date("m/d/Y") }}</td>
                    <td>{{ reservation.vertek |date("m/d/Y")}}</td>
                    <td>{{ reservation.opmerking }}</td>
                    <td><a class="btn btn-info"><i class="fa fa-eye"></i></a></td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}

