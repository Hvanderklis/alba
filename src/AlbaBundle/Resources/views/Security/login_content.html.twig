{% trans_default_domain 'FOSUserBundle' %}

<div class="login">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div class="login-form">
                <h1>Login</h1>
                {% if error %}
                    <div class="alert alert-danger"><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> The username or the password is not correct. Try Again.</div>
                {% endif %}

                <form action="{{ path("fos_user_security_check") }}" method="post">
                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="icon-form">
                        <label for="username"><i class="fa fa-user"></i></label>
                        <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" class="form-control" placeholder="username">
                    </div>

                    <div class="icon-form">
                        <label for="password"><i class="fa fa-lock"></i></label>
                        <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="password">
                    </div>

                    <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                    <label for="remember_me">Remember me</label>

                    <input type="submit" id="_submit" name="_submit" value="Login" class="btn btn-primary pull-right"/>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
</div>
