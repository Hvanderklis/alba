{% trans_default_domain 'FOSUserBundle' %}
<div class="login">
    <div class="login-form">
        <!--Logo-->
        <img id="logo" src="{{ asset('bundles/alba/img/logo.png') }}">
    </div>
</div>
<div class="row">
    <div class="large-6 large-offset-3 columns">
        <div class="login-panel">
            <h1>Login</h1>
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="row collapse">
                    <div class="input-group">
                        <span class="input-group-label"><i class="fa fa-user" id="iconC"></i></span>
                        <input class="input-group-field" type="text" id="username" value="{{ last_username }}" required="required" placeholder="username" name="_username">
                    </div>
                </div>
                <div class="row collapse">
                    <div class="input-group">
                        <span class="input-group-label"><i id="iconC" class="fa fa-lock"></i></span>
                        <input class="input-group-field" type="password" id="password" required="required" placeholder="password" name="_password">
                    </div>
                </div>

                {% if error %}
                    <div><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> The username or the password is not correct. Try Again.</div>
                {% endif %}

                <input type="checkbox" id="remember_me" name="_remember_me" value="on" />Remeber me<br/>
                <input class="button large" type="submit" id="submit" name="_submmit" value="login">

            </form>
        </div>
    </div>
</div>