{% trans_default_domain 'FOSUserBundle' %}

<div class="login">
    <div class="login-form">
        <h1>Login</h1>
        {% if error %}
            <div><i class="fa fa-exclamation-triangle" aria-hidden="true"></i> The username or the password is not correct. Try Again.</div>
        {% endif %}

        <div class="row">
            <div class="large-6 large-offset-3 columns">
                <div class="login-panel">
                    <form action="{{ path("fos_user_security_check") }}" method="post">
                        {% if csrf_token %}
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        {% endif %}
                        <div class="row collapse">
                            <div class="small-2 columns">
                                <span class="prefix"><i class="fa fa-user" id="iconC"></i></span>
                            </div>
                            <div class="small-10  columns">
                                <input type="text" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="username">
                            </div>
                        </div>
                        <div class="row collapse">
                            <div class="small-2 columns ">
                                <span class="prefix"><i id="iconC" class="fa fa-lock"></i></span>
                            </div>
                            <div class="small-10 columns ">
                                <input type="password" id="password" name="_password" required="required" class="form-control" placeholder="password">
                            </div>
                        </div>

                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">Remember me</label>

                        <input type="submit" id="_submit" name="_submit" value="Login" class="button"/>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
