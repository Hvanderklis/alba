{% block javascripts %}
    <script>
        function initMap() {
            var uluru = {lat: 57.474911, lng: -3.216983};
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 14,
                center: uluru,
                mapTypeId: google.maps.MapTypeId.HYBRID,
                scrollwheel: false,
                navigationControl: false,
                mapTypeControl: false,
                scaleControl: false,
                draggable: false,
            });
            var marker = new google.maps.Marker({
                position: uluru,
                map: map
            });
        }

    </script>
{% endblock %}
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCBHP5Qvd9BG79TFPbNTVditsbUc-uY7Ng&callback=initMap"></script>
