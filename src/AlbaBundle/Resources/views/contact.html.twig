{% extends "@Alba/base.html.twig" %}
{% block body %}
    <br>
    <div class="row medium-8 large-6 columns">
        <div class="blog-post callout success">
            <form id="contactform" name="contactform" method="post" action="">
                <p>Neem contact met ons op</p>
                <div class="row collapse">
                    <div class="large-8 columns">
                        <label class="inline">Name</label>
                        <input type="text" name="name" id="name" placeholder="Name" required>
                    </div>
                </div>

                <div class="row collapse">
                    <div class="large-8 columns">
                        <label class="inline">Email</label>
                        <input type="email" id="email" name="email" placeholder="name@email.com">
                    </div>
                </div>

                <div class="row collapse">
                    <div class="large-8 columns">
                        <label class="inline">Message</label>
                        <textarea name="comments" id="comments" type="text" placeholder="Your message..."></textarea>
                    </div>
                </div>

                <div class="row collapse">
                    <div class="large-4 columns">
                        <button name="Submit" value="Submit" type="submit" class="radius button expand">Submit</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
    <br>
{% endblock %}
