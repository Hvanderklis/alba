{% extends 'AlbaBundle::base.html.twig' %}
{% block body %}
    <h1>Rentable Rooms</h1>
    <table>
    {% for kamer in kamer %}

        <div class="row small-up-1 medium-up-2 large-up-3">
            <div class="medium-3 column">
                <div class="callout" id="book">
                    <p style="color: black">{{ kamer.kamerNaam }}</p>
                    {% for kamerafbeelding in kamerafbeelding %}
                        {% if kamerafbeelding.kamer.id == kamer.id %}
                            <img src="/{{ kamerafbeelding.path}}/{{  kamerafbeelding.name }}.{{ kamerafbeelding.type }}" alt="Single Room">
                        {% endif %}
                    {% endfor %}
                </div>
            </div>
            <div>
            <div class="medium-9 column">
                <p class="lead" style="color: black">{{ kamer.omschrijving }}</p>
                <p class="subheader" style="color: black">â‚¬ {{ kamer.prijs }}</p>
                <a class="button" href="{{ path('kamer_reserveren_show', { 'id': kamer.id }) }}">Info</a>
            </div>
        </div>

    {% endfor %}
    </table>
{% endblock %}