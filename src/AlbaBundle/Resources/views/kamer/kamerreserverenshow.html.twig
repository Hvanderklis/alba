{% extends 'AlbaBundle::base.html.twig' %}

{% block body %}
    <h1>{{ kamer.kamerNaam }}</h1>

    <div class="row small-up-1 medium-up-2 large-up-3">
        <div class="medium-3 column">
            <div class="callout" id="book">
                <p id="colorw">{{ kamer.kamerNaam }}</p>
                {% for kamerafbeelding in kamerafbeelding %}
                    <img src="/{{ kamerafbeelding.path}}/{{  kamerafbeelding.name }}.{{ kamerafbeelding.type }}" >
                {% endfor %}
                <p class="lead" id="colorw">{{ kamer.omschrijving }}</p>
                <p class="subheader" id="colorw">&pound; {{ kamer.prijs }}</p>
            </div>
        </div>
    </div>
    {#<a class="button secondary" href="{{ path('klant_new') }}">Register</a>#}
    <a class="button secondary" href="{{ path('kamer_reserveren') }}">Back to the list</a>
{% endblock %}
