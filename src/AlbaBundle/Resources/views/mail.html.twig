{% extends '@Alba/base.html.twig' %}

{% block body %}
    <!DOCTYPE html>
<html>
    <head>
        <title>Form</title>
    </head>
<div class="container">
    <div class="col-md-5">
        <div class="form-area">
            <form action="{{ path ('mail') }}" method="post" role="form">
                <br style="clear:both">
                <h3 style="margin-bottom: 25px; text-align: center;">Contact Form</h3>
                <div class="form-group">
                    <input type="text" class="form-control" id="email" name="Email" placeholder="Email" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" id="ubject" name="Subject" placeholder="Subject" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" type="textarea" name="message" id="message" placeholder="Message" maxlength="140" rows="7"></textarea>
                    <span class="help-block"><p id="characterLeft" class="help-block ">You have reached the limit</p></span>
                </div>

                <input type="submit" value="Send" class="btn"/>
            </form>
        </div>
    </div>
</div>

</html>
{% endblock %}



