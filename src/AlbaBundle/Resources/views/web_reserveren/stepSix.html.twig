{% extends '@Alba/base.html.twig' %}
{% block body %}
    {% set reserveren = app.session.get('reserveren') %}

<div class="tabs-content" data-tabs-content="example-tabs">
    <div class="tabs-panel">
        <div class="row">
                <div class="large-4 columns">
                    <h3>Reservation info</h3>
                    <hr>
                    <p>Check in: {{ arrival }} </p>
                    <p>Check out: {{ departure }} </p>
                    <p>Extra's: Pickup service - &pound; 30  </p>
                    <p>Comments: This is the comment </p>
                    <h3>Room info</h3>
                    <hr>
                    <p>kamernaam</p>
                    <p>&pound; kamerprijs}</p>
                    <hr>
                    <p>Total Cost: </p>
                </div>

                <div class="large-4 columns">
                    <h3>Reservation info</h3>
                    <form>
                        <div class="row">
                            <div class="columns">
                                <label>Name
                                    {{ firstName }} {{ insertion }} {{ lastName }}
                                </label>
                                <label>Date of Birth
                                    {{ birthday }}<
                                </label>
                                <label>Gender
                                    {{ gender }}
                                </label>
                                <label>Email
                                    {{ email }}
                                </label>
                                <label>Phone
                                    {{ phone }}
                                </label>
                                <label>City
                                    {{ city }}
                                </label>
                                <label>Language
                                    {{ language }}
                                </label>
                            </div>
                        </div>
                    </form>
                </div>

                <div class="large-4 columns">
                    <h3>Guests</h3>
                    {% for key, gast in gasten %}
                    <label>
                        Guest {{ key }}
                    </label>
                        <label>Name
                            {{ gast.firstName }} {{ gast.insertion }} {{ gast.lastName }}
                        </label>
                    {% endfor %}
                </div>

            </div>
        </div>

    </div>

{% endblock %}
