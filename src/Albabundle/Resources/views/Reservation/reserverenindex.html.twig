{% extends '@Alba/base.html.twig' %}

{% block body %}
    <!DOCTYPE html>
    <html>
    <head>
        <title>Form</title>
    </head>
    <div class="container">
        <div class="col-md-5">
            <div class="form-area">
                <form action="{{ path ('reserveren') }}" method="post" role="form">
                    <br style="clear:both">
                    <h3 style="margin-bottom: 25px; text-align: center;">Reservation Form</h3>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Name" name="Name" placeholder="Name" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Insertion" name="Insertion" placeholder="Insertion" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Surname" name="Surname" placeholder="Surname" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Birthdate" name="Birthdate" placeholder="Birthdate" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Gender" name="Gender" placeholder="Gender" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="City" name="City" placeholder="City" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" id="Language" name="Language" placeholder="Language" required>
                    </div>
                    <div class="form-group">
                        <input type="email" class="form-control" id="Email" name="Email" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <input type="tel" class="form-control" id="Tel" name="Tel" placeholder="Tel" required>
                    </div>
                    <input type="submit" value="Send" class="btn"/>
                </form>
            </div>
        </div>
    </div>

    </html>
{% endblock %}